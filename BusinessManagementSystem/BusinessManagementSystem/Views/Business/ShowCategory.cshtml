@model BusinessManagementSystem.Models.Models.Category

@{
    Layout = "~/Views/Shared/_TableLayout.cshtml";
}

@if (null != TempData["message"])
{
    <script type="text/javascript">
       alert("@TempData["message"]");
    </script>
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Category Table</h4>
        </div>
    </div>
</div>

<div class="container-fluid">

    <div class="card">
        <form class="form-horizontal" method="post">
            <div class="card-body">
                <h4 class="card-title">Search Category</h4>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group row">
                            @Html.LabelFor(c => c.Code, null, new { @for = "code", @class = "col-sm-3 text-right control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(c => c.Code, Model.Code, htmlAttributes: new { @class = "form-control", id = "code", placeholder = "Cateogry Code Here" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(c => c.Name, null, new { @for = "name", @class = "col-sm-3 text-right control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(c => c.Name, Model.Name, htmlAttributes: new { @class = "form-control", id = "name", placeholder = "Cateogry Name Here" })
                            </div>
                        </div>

                    </div>


                </div>
                <div class="border-top">
                    <div class="card-body text-center">
                        <button type="submit" class="btn btn-primary">Search</button>
                        <a href="../../Business/ShowCategory" class="btn btn-danger">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">All Categories</h5>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">

                            <thead>
                                <tr>
                                    <th>SI</th>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                @{ int si = 1;}
                                @foreach (var category in Model.Categories)
                                {
                                    <tr>
                                        <td>@(si++)</td>
                                        <td>@category.Code</td>
                                        <td>@category.Name</td>                                        
                                        <td>@Html.ActionLink("Edit", "UpdateCategory", "Business", new { Id = category.ID }, null) | @Html.ActionLink("Delete", "DeleteCategory", new { Id = category.ID }, null)</td>

                                    </tr>
                                }
                            </tbody>

                            <tfoot>
                                <tr>
                                    <th>SI</th>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>





