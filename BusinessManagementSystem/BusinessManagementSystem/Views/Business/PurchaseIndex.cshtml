@model BusinessManagementSystem.Models.Models.PurchaseVM
@{
    ViewBag.Title = "Purchase Table";
    Layout = "~/Views/Shared/_TableLayout.cshtml";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Purchased Products List</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Business/InsertPurchaseProduct">Insert Purchase Products</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">

    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">All Purchased Products</h5>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">

                            <thead>
                                <tr>
                                    <th>SI</th>
                                    <th>Product</th>
                                    <th>Available Quantity</th>
                                    <th>Unit Price</th>
                                    <th>New MRP (TK)</th>
                                </tr>
                            </thead>

                            @if (Model != null && Model.PurchaseVMS.Count > 0)
                            {
                                <tbody>
                                    @{
                                        int sl = 1;
                                    }
                                    @foreach (var item in Model.PurchaseVMS)
                                    {
                                        <tr>
                                            <td>@(sl++)</td>
                                            <td>@item.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.PreviousCostPrice</td>
                                            <td>@item.PreviousMRP</td>
                                        </tr>
                                    }
                                </tbody>
                                        }

                                <tfoot>
                                    <tr>
                                        <th>SI</th>
                                        <th>Product</th>
                                        <th>Available Quantity</th>
                                        <th>Unit Price</th>
                                        <th>New MRP (TK)</th>
                                    </tr>
                                </tfoot>
                            </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
