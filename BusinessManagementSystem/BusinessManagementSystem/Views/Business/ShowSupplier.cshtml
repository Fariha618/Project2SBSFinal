@model BusinessManagementSystem.Models.Models.Supplier

@{
    Layout = "~/Views/Shared/_TableLayout.cshtml";
}

@if (null != TempData["message"])
{
    <script type="text/javascript">
       alert("@TempData["message"]");
    </script>
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Supplier Table</h4>
        </div>
    </div>
</div>

<div class="container-fluid">

    <div class="card">
        <form class="form-horizontal" method="post">
            <div class="card-body">
                <h4 class="card-title">Search Supplier</h4>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group row">
                            @Html.LabelFor(c => c.Code, null, new { @for = "code", @class = "col-sm-3 text-right control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(c => c.Code, Model.Code, htmlAttributes: new { @class = "form-control", id = "code", placeholder = "Supplier Code Here" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(c => c.Name, null, new { @for = "name", @class = "col-sm-3 text-right control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(c => c.Name, Model.Name, htmlAttributes: new { @class = "form-control", id = "name", placeholder = "Supplier Name Here" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(c => c.Address, null, new { @for = "address", @class = "col-sm-3 text-right control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(c => c.Address, Model.Address, htmlAttributes: new { @class = "form-control", id = "address", placeholder = "Enter Address Here" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(c => c.Email, null, new { @for = "email", @class = "col-sm-3 text-right control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(c => c.Email, Model.Email, htmlAttributes: new { @class = "form-control", id = "email", placeholder = "Enter Email Address Here" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(c => c.Contact, null, new { @for = "contact", @class = "col-sm-3 text-right control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(c => c.Contact, Model.Contact, htmlAttributes: new { @class = "form-control", id = "contact", placeholder = "Enter Contact Number Here" })
                            </div>
                        </div>

                    </div>


                </div>
                <div class="border-top">
                    <div class="card-body text-center">
                        <button type="submit" class="btn btn-primary">Search</button>
                        <a href="../../Business/ShowSupplier" class="btn btn-danger">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">All Suppliers</h5>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">

                            <thead>
                                <tr>
                                    <th>SI</th>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Email</th>
                                    <th>Contact</th>
                                    <th>Contact Person</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                @{ int si = 1;}
                                @foreach (var supplier in Model.Suppliers)
                                {
                                    <tr>
                                        <td>@(si++)</td>
                                        <td>@supplier.Code</td>
                                        <td>@supplier.Name</td>
                                        <td>@supplier.Address</td>
                                        <td>@supplier.Email</td>
                                        <td>@supplier.Contact</td>
                                        <td>@supplier.ContactPerson</td>
                                        <td>@Html.ActionLink("Edit", "UpdateSupplier", "Business", new { Id = supplier.ID }, null) | @Html.ActionLink("Delete", "DeleteSupplier", new { Id = supplier.ID }, null)</td>

                                    </tr>
                                }
                            </tbody>

                            <tfoot>
                                <tr>
                                    <th>SI</th>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Email</th>
                                    <th>Contact</th>
                                    <th>Contact Person</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>





